<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="ReactTrackerAppTheme" parent="Theme.AppCompat">

  </style>

  <style name="default_button">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingTop">18dp</item>
    <item name="android:paddingBottom">18dp</item>
    <item name="android:paddingLeft">24dp</item>
    <item name="android:paddingRight">24dp</item>
    <item name="android:textSize">18sp</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_gravity">center</item>
  </style>

  <style name="default_button_primary_action" parent="default_button">
  </style>

  <style name="non_primary_button" parent="default_button">
    <item name="android:textSize">14sp</item>
    <item name="android:paddingTop">12dp</item>
    <item name="android:paddingBottom">12dp</item>
    <item name="android:paddingLeft">18dp</item>
    <item name="android:paddingRight">18dp</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="generic_number_wheel">
    <item name="android:minHeight">48dp</item>
    <item name="android:minWidth">96dp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <!-- regular input fields -->
  <style name="default_input_field">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">48dp</item>
    <item name="android:maxLines">1</item>
    <item name="android:minLines">1</item>
    <item name="android:paddingLeft">12dp</item>
    <item name="android:paddingRight">12dp</item>
    <item name="android:paddingTop">3dp</item>
    <item name="android:paddingBottom">3dp</item>
    <item name="android:textSize">16dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:inputType">text</item>
  </style>

  <!-- large, centered, input filed that expands when more text is entered -->
  <style name="centered_number_input_field" parent="default_input_field">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:inputType">number</item>
    <item name="android:textSize">40dp</item>
    <item name="android:maxLength">6</item>
    <item name="android:paddingTop">16dp</item>
    <item name="android:paddingBottom">16dp</item>
    <item name="android:paddingLeft">24dp</item>
    <item name="android:paddingRight">24dp</item>
  </style>

  <style name="progress_bar">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">4dip</item>
    <item name="android:max">100</item>
    <item name="android:progress">0</item>
    <item name="android:indeterminateOnly">false</item>
    <item name="android:progressDrawable">@drawable/progress_bar_reading</item>
    <item name="android:layout_marginTop">12dp</item>
    <item name="android:layout_marginBottom">12dp</item>
  </style>

  <style name="cover_image">
    <item name="android:layout_marginRight">13dip</item>
    <item name="android:layout_width">67dip</item>
    <item name="android:layout_height">67dip</item>
    <item name="android:scaleType">centerCrop</item>
    <item name="android:layout_alignParentLeft">true</item>
    <!--<item name="android:background">@android:color/darker_gray</item>-->
  </style>

  <style name="single_line_text">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">13sp</item>
    <item name="android:singleLine">true</item>
    <item name="android:ellipsize">end</item>
    <item name="android:focusable">false</item>
  </style>

  <style name="single_line_author" parent="single_line_text">
    <item name="android:layout_marginTop">3dip</item>
  </style>

  <style name="single_line_title" parent="single_line_text">
    <item name="android:layout_marginTop">-3dip</item>
  </style>

  <style name="title_big" parent="single_line_title">
    <item name="android:textSize">18sp</item>
  </style>

  <style name="author_big" parent="single_line_author">
    <item name="android:textSize">16sp</item>
  </style>

  <style name="generic_label">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">6dp</item>
    <item name="android:layout_marginBottom">6dp</item>
    <item name="android:textSize">14dp</item>
  </style>

  <style name="text_blank_state">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:gravity">center</item>
    <item name="android:textSize">16dp</item>
    <item name="android:paddingLeft">24dp</item>
    <item name="android:paddingRight">24dp</item>
    <item name="android:lineSpacingMultiplier">1.5</item>
    <item name="android:visibility">gone</item>
  </style>

  <style name="pager_tab_strip">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">top</item>
    <item name="android:padding">8dp</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="divider">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">12dp</item>
    <item name="android:paddingTop">2dp</item>
    <item name="android:paddingBottom">2dp</item>
  </style>

  <!-- a small, square, action button much like the buttons on the action bar
  in later versions of android -->
  <style name="action_button">
    <item name="android:layout_width">48dp</item>
    <item name="android:layout_gravity">right|center_vertical</item>
    <item name="android:layout_height">48dp</item>
  </style>

  <style name="inline_input_field_button" parent="action_button">
    <item name="android:layout_width">48dp</item>
    <item name="android:layout_gravity">right|center_vertical</item>
    <item name="android:layout_height">48dp</item>
  </style>

  <!--
  flipper at the bottom of the screen that switches between two sets of
  buttons
  -->
  <style name="flipper_action_buttons">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:inAnimation">@anim/slide_up_appear</item>
    <item name="android:outAnimation">@anim/slide_down_disappear</item>
  </style>

  <!-- style for normal text usage -->

  <style name="default_text">
    <item name="android:textSize">14sp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="ui_hint">
    <item name="android:textSize">12sp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="free_text_input">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:typeface">serif</item>
    <item name="android:textStyle">italic</item>
    <item name="android:textSize">16dp</item>
    <item name="android:padding">24dp</item>
    <item name="android:inputType">text|textCapSentences|textAutoCorrect|textMultiLine</item>
    <item name="android:gravity">fill_horizontal</item>
  </style>


  <style name="horizontal_divider">
    <item name="android:layout_height">1px</item>
    <item name="android:layout_width">match_parent</item>
  </style>

</resources>
