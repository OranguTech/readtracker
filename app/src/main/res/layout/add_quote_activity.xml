<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:padding="12dp">

  <LinearLayout
    android:id="@+id/quote_entry_layout"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="vertical">

    <TextView
      style="@style/default_text"
      android:layout_marginTop="6dp"
      android:layout_marginBottom="6dp"
      android:text="@string/quote_text"/>

    <EditText
      android:id="@+id/quote_text_edit"
      style="@style/free_text_input"
      android:minHeight="128dp"
      android:layout_marginBottom="12dp"
      android:hint=""/>

    <LinearLayout
      android:id="@+id/layoutHighlightComment"
      android:layout_height="wrap_content"
      android:layout_width="fill_parent"
      android:orientation="vertical">

      <TextView
        style="@style/default_text"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="6dp"
        android:text="@string/quote_share_with_comment"/>

      <EditText
        android:id="@+id/quote_comment_edit"
        style="@style/free_text_input"
        android:minHeight="64dp"
        android:layout_marginBottom="12dp"
        android:hint=""/>

    </LinearLayout>

    <TextView
      android:id="@+id/textLabelEnterPosition"
      style="@style/default_text"
      android:layout_marginTop="12dp"
      android:layout_marginBottom="6dp"
      android:text="@string/quote_activity_position"/>

    <com.readtracker.android.custom_views.ProgressPicker
      android:id="@+id/progressPicker"
      android:layout_width="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      android:layout_marginBottom="12dp"/>

    <Button
      android:id="@+id/visit_web_button"
      style="@style/default_button"
      android:layout_marginTop="12dp"
      android:layout_marginBottom="12dp"
      android:text="View on Readmill"
      android:drawableLeft="@drawable/icon_web"
      android:drawablePadding="-32dp"/>

    <Button
      android:id="@+id/save_button"
      style="@style/default_button"
      android:text="@string/quote_activity_add"/>

  </LinearLayout>
</ScrollView>
