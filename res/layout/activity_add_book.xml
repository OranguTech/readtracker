<?xml version="1.0" encoding="utf-8"?>

<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res/com.readtracker_beta"

  android:layout_height="fill_parent"
  android:layout_width="fill_parent"
  android:fillViewport="true">

  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:orientation="vertical">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="0dp"
      android:layout_marginBottom="6dp"
      android:textColor="@color/text_color_secondary"
      android:text="Book information" />

    <EditText
      android:id="@+id/editTitle"
      style="@style/default_input_field"
      android:layout_marginBottom="12dp"
      android:hint="Title" />

    <EditText
      android:id="@+id/editAuthor"
      style="@style/default_input_field"
      android:layout_marginBottom="12dp"
      android:hint="Author" />

    <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:layout_marginTop="24dp"
      android:layout_marginBottom="6dp">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@color/text_color_secondary"
        android:text="Tracking by"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

      <com.readtracker_beta.thirdparty.views.Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/togglePagesPercent"
        app:textOn="Pages"
        app:textOff="Percent"
        android:checked="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    </RelativeLayout>

    <EditText
      android:id="@+id/editPageCount"
      style="@style/centered_number_input_field"
      android:layout_width="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="12dp"
      android:layout_marginBottom="12dp"
      android:layout_marginRight="6dp"
      android:paddingLeft="24dp"
      android:paddingRight="24dp"
      android:inputType="number"
      android:hint="0"
      android:gravity="center_horizontal"
      android:ellipsize="end" />

    <!-- show readmill connection settings when in online mode -->

    <RelativeLayout
      android:id="@+id/layoutReadmill"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:layout_marginTop="24dp"
      android:layout_marginBottom="6dp"
      >

      <TextView
        android:text="Readmill profile page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />

      <com.readtracker_beta.thirdparty.views.Switch
        android:id="@+id/togglePublicPrivate"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:textOn="Visible"
        app:textOff="Hidden"
        android:checked="true" />

      <!-- spacer to push the add button to the bottom of the page but still allow small screens to scroll -->

    </RelativeLayout>

    <View
      android:layout_width="fill_parent"
      android:layout_height="0dp"
      android:layout_weight="1" />

    <Button
      android:id="@+id/buttonAddBook"
      style="@style/default_button"
      android:layout_marginTop="24dp"
      android:text="Add" />

  </LinearLayout>
</ScrollView>
