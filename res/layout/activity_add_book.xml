<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:fillViewport="true">

  <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:orientation="vertical">

        <!--suppress AndroidLintUselessParent -->
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:padding="12dp"
                  android:orientation="vertical">

      <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="6dp"
                android:textColor="@color/text_color_secondary"
                android:text="Title &amp; author"/>

      <com.readtracker.customviews.UnderlinedEditText android:id="@+id/editTitle"
                                                      style="@style/default_input_field"
                                                      android:layout_marginBottom="12dp"
                                                      android:hint="Title"/>

      <com.readtracker.customviews.UnderlinedEditText android:id="@+id/editAuthor"
                                                      style="@style/default_input_field"
                                                      android:layout_marginBottom="12dp"
                                                      android:hint="Author"/>

      <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="6dp"
                android:textColor="@color/text_color_secondary"
                android:text="Length"/>

      <LinearLayout android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_marginBottom="6dp"
                    android:orientation="horizontal">

        <com.readtracker.customviews.UnderlinedEditText android:id="@+id/editPageCount"
                                                        style="@style/default_input_field"
                                                        android:layout_width="fill_parent"
                                                        android:layout_weight="1"
                                                        android:layout_marginRight="6dp"
                                                        android:inputType="number"
                                                        android:gravity="center"
                                                        android:text=""/>

        <ToggleButton android:id="@+id/togglePagesPercent"
                      style="@style/default_toggle_button"
                      android:layout_width="fill_parent"
                      android:layout_weight="1"
                      android:textOn="Pages"
                      android:textOff="Percent"
                      android:checked="true"
                      android:layout_marginLeft="6dp"/>
      </LinearLayout>

      <!-- show readmill connection settings when in online mode -->
      <LinearLayout android:id="@+id/layoutConnect"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="24dp"
                  android:layout_marginBottom="6dp"
                  android:textColor="@color/text_color_secondary"
                  android:text="Readmill"/>

        <ToggleButton android:id="@+id/togglePublicPrivate"
                      style="@style/default_toggle_button"
                      android:textOn="Show on profile"
                      android:textOff="Only visible to me"
                      android:checked="true"/>

      </LinearLayout>

      <!-- spacer to push the add button to the bottom of the page but still allow small screens to scroll -->
      <View android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>

      <Button android:id="@+id/buttonAddBook"
              style="@style/default_button_primary_action"
              android:layout_alignParentBottom="true"
              android:layout_marginTop="24dp"
              android:text="Add"/>

    </LinearLayout>
  </LinearLayout>
</ScrollView>
