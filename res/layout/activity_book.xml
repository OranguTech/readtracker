<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent">

  <LinearLayout android:id="@+id/layoutHeaderBookActivity"
                android:background="@color/midnight_light"
                android:layout_width="fill_parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_height="72dp">

    <!-- include the regular cover + title/author -->

    <include layout="@layout/_book_header" />

    <!-- followed by the action bar buttons -->

    <!-- use a ViewFlipper for action buttons for easy toggle animations -->
    <com.readtracker.thirdparty.SafeViewFlipper android:id="@+id/flipperActionButtons"
                                                android:layout_width="wrap_content"
                                                android:layout_height="fill_parent"
                                                android:background="@color/midnight_dark"
                                                android:inAnimation="@anim/fade_in_fast"
                                                android:visibility="gone"
                                                android:outAnimation="@anim/fade_out_fast">

      <!-- dummy view for safe view flipper -->
      <View android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

      <Button android:id="@+id/buttonAddHighlight"
              style="@style/action_button"
              android:drawableLeft="@drawable/icon_add" />

    </com.readtracker.thirdparty.SafeViewFlipper>
  </LinearLayout>

  <!-- container for pages of the book activity -->

  <android.support.v4.view.ViewPager android:id="@+id/pagerBookActivity"
                                     android:layout_width="fill_parent"
                                     android:layout_height="fill_parent"
                                     android:layout_below="@id/layoutHeaderBookActivity">

    <android.support.v4.view.CustomPagerTabStrip style="@style/pager_title" />

  </android.support.v4.view.ViewPager>

</RelativeLayout>
