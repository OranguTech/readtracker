<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent">

  <LinearLayout android:id="@+id/layoutHeaderBookActivity"
                android:background="@color/midnight_light"
                android:layout_width="fill_parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_height="72dp">

    <!-- include the regular cover + title/author -->

    <include layout="@layout/_book_header" />

    <!-- followed by the action bar buttons -->

    <!-- use a ViewFlipper for action buttons for easy toggle animations -->
    <com.readtracker.thirdparty.SafeViewFlipper android:id="@+id/flipperActionButtons"
                                                android:layout_width="wrap_content"
                                                android:layout_height="fill_parent"
                                                android:background="@color/midnight_dark"
                                                android:inAnimation="@anim/fade_in_fast"
                                                android:visibility="gone"
                                                android:outAnimation="@anim/fade_out_fast">

      <!-- optionally show a little bookmark with the page of the last reading session -->
      <LinearLayout android:id="@+id/layoutBookmark"
                    android:orientation="horizontal"
                    android:layout_height="fill_parent"
                    android:layout_width="wrap_content">

        <ImageView android:id="@+id/imageBookmark"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/bookmark" />

        <TextView android:id="@+id/textBookmarkPage"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingRight="12dp"
                  android:paddingLeft="12dp"
                  android:paddingTop="12dp"
                  android:lines="1"
                  android:text="3"
                  android:textSize="12sp"
                  android:gravity="center_horizontal" />
      </LinearLayout>

      <Button android:id="@+id/buttonAddHighlight"
              style="@style/action_button"
              android:drawableLeft="@drawable/icon_add" />

    </com.readtracker.thirdparty.SafeViewFlipper>
  </LinearLayout>

  <com.readtracker.thirdparty.TitlePageIndicator android:id="@+id/titleBookActivity"
                                                 style="@style/pager_headers"
                                                 android:layout_below="@id/layoutHeaderBookActivity" />

  <!-- container for pages of the book activity -->

  <android.support.v4.view.ViewPager android:id="@+id/pagerBookActivity"
                                     android:layout_below="@id/titleBookActivity"
                                     android:layout_width="fill_parent"
                                     android:layout_height="fill_parent" />

</RelativeLayout>
