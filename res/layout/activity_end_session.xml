<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="fill_parent"
  android:layout_width="fill_parent"
  android:gravity="center_horizontal">

  <include layout="@layout/_book_header" />

  <!-- Adjust the centering to be visually (roughly) in the middle of the screen -->

  <LinearLayout
    android:layout_below="@id/_bookHeader"
    android:layout_above="@+id/flipperActionButtons"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="-42dp"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:padding="12dp">

    <TextView
      style="@style/default_text"
      android:text="Time spent reading"
      android:layout_marginBottom="12dp"
      android:layout_gravity="center_horizontal" />

    <com.readtracker_beta.thirdparty.widget.WheelView
      android:id="@+id/wheelDuration"
      android:minWidth="220dp"
      android:minHeight="80dp"
      android:layout_height="wrap_content"
      android:layout_width="fill_parent"
      android:layout_gravity="center_horizontal"
      android:layout_marginBottom="24dp" />

    <View
      android:id="@+id/dividerOne"
      style="@style/thick_divider"
      android:layout_marginTop="-52dp"
      android:layout_marginBottom="52dp"
      android:layout_width="fill_parent" />

    <TextView
      style="@style/default_text"
      android:layout_marginTop="24dp"
      android:text="Where did you end?"
      android:layout_gravity="center_horizontal" />

    <TextView
      style="@style/ui_hint"
      android:text="Scroll to the very end if you finished the book"
      android:layout_gravity="center_horizontal" />

    <com.readtracker_beta.custom_views.ProgressPicker
      android:id="@+id/progressPicker"
      android:layout_marginTop="12dp"
      android:layout_height="wrap_content"
      android:layout_width="fill_parent"
      android:layout_gravity="center_horizontal" />

    <View
      android:id="@+id/dividerTwo"
      style="@style/thick_divider"
      android:layout_marginTop="-32dp"
      android:layout_marginBottom="32dp"
      android:layout_width="fill_parent" />

  </LinearLayout>

  <com.readtracker_beta.thirdparty.SafeViewFlipper
    android:id="@+id/flipperActionButtons"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:inAnimation="@anim/slide_up_appear"
    android:outAnimation="@anim/slide_down_disappear">

    <Button
      android:id="@+id/buttonSaveProgress"
      style="@style/default_button"
      android:text="Save" />

    <Button
      android:id="@+id/buttonFinishBook"
      style="@style/default_button"
      android:text="Finish book" />

  </com.readtracker_beta.thirdparty.SafeViewFlipper>
</RelativeLayout>
