<?xml version="1.0" encoding="utf-8"?>

 <!--
 generic header for showing a cover and a title + author

 use #ViewBindingBookHeader for easy initialization of this layout.
 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/_bookHeader"
              android:layout_width="fill_parent"
              android:layout_height="72dp"
              android:layout_weight="1"
              android:background="@color/midnight_dark"
              android:padding="12dp"
              android:orientation="horizontal">

  <ImageView android:id="@+id/imageCover"
             android:layout_height="48dp"
             android:layout_width="48dp"
             android:layout_marginRight="12dp"
             android:background="@android:color/white"
             android:scaleType="centerCrop" />

  <LinearLayout android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

    <TextView android:id="@+id/textTitle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="-6dp"
              android:lines="1"
              android:textSize="18dp"
              android:textColor="@color/text_color_primary"
              android:text="Metamorphosis" />

    <TextView android:id="@+id/textAuthor"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="0dp"
              android:textSize="12dp"
              android:textColor="@color/text_color_secondary"
              android:text="Franz Kafka" />
  </LinearLayout>
</LinearLayout>
