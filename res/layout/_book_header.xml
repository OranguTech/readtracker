<?xml version="1.0" encoding="utf-8"?>

<!--
generic header for showing a cover and a title + author

use #ViewBindingBookHeader for easy initialization of this layout.
-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/_bookHeader"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:paddingTop="3dp"
              android:paddingBottom="12dp"
              android:orientation="vertical">

  <RelativeLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content">

    <TextView android:id="@+id/textTitle"
              style="@style/header_main_text"
              android:maxLines="2" />

    <ImageButton android:id="@+id/buttonBack"
                 android:layout_alignParentLeft="true"
                 android:src="@drawable/back_arrow"
                 android:layout_width="28dp"
                 android:layout_height="36dp"
                 android:layout_marginTop="4.5dp"
                 android:background="@drawable/default_toggle_button_background"
                 android:contentDescription="Navigate: back"/>

  </RelativeLayout>

  <TextView android:id="@+id/textAuthor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@color/text_color_secondary"
            android:maxLines="2" />

</LinearLayout>