<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:readtracker="http://schemas.android.com/apk/res/com.readtracker"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="12dp">

  <com.readtracker.customviews.WaveView id="@+id/waveReading"
                                        android:layout_width="fill_parent"
                                        android:layout_height="100dp"
                                        android:background="@android:color/transparent"
                                        android:visibility="invisible"
                                        readtracker:backgroundColor="@color/midnight_medium"
                                        readtracker:primaryColor="@color/midnight_ultralight"
                                        readtracker:secondaryColor="@color/midnight_ultralight_pressed"
                                        android:layout_centerInParent="true" />

  <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical"
                android:layout_centerInParent="true">

    <TextView android:id="@+id/textHeader"
              style="@style/reading_session_text_passive"
              android:text="Reading for" />

    <TextView android:id="@+id/textSummary"
              style="@style/reading_session_text_active"
              android:text="34 minutes" />

  </LinearLayout>

  <!-- placeholder for wave animation -->

  <View android:id="@+id/wave"
        android:layout_width="fill_parent"
        android:layout_height="20dp" />

</RelativeLayout>
